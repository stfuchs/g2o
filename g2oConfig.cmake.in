FIND_PATH(g2o_INCLUDE_DIR @PROJECT_NAME@/core/base_vertex.h
  PATHS @CMAKE_INSTALL_PREFIX@/include
  NO_DEFAULT_PATH
)

FIND_PATH(csparse_INCLUDE_DIR cs.h
  PATHS @CMAKE_INSTALL_PREFIX@/include/EXTERNAL/csparse
  NO_DEFAULT_PATH
)

SET(g2o_INCLUDE_DIRS
  ${g2o_INCLUDE_DIR}
  @EIGEN3_INCLUDE_DIR@
  ${csparse_INCLUDE_DIR}
)

MACRO(FIND_G2O_LIBRARY LIBRARYNAME)
  FIND_LIBRARY(${LIBRARYNAME}_LIBRARY ${LIBRARYNAME}
    PATHS @CMAKE_INSTALL_PREFIX@/lib
    NO_DEFAULT_PATH
  )
ENDMACRO(FIND_G2O_LIBRARY LIBRARY LIBRARYNAME)

